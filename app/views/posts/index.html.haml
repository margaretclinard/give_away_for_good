.index-header
  %p #{@user.company}'s Listings

.posts-show
  - if @posts.empty?
    %p
      #{@user.company} hasn't added any needs yet.
  - else
    %ul
      - @posts.each do |post|
        = link_to "#{post.category}", user_post_path(post.user, post)

  = link_to "Back to All Listings", root_path