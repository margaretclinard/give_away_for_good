.side-image
  .images-wrapper
  .side-image-content
    %h4 #{@user.company}'s Profile
    %h1 Description: #{@user.bio}
    %p Address:
    %p #{@user.street1}
    %p #{@user.street2}
    %p #{@user.city}, #{@user.state} #{@user.zip}

    %p Contact: #{@user.name}
    %p Email: #{@user.email}
    -if current_user == @user
      =link_to "Edit Profile", edit_user_path(current_user)